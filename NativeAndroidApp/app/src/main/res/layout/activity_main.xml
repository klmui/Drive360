<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/driveButton"
        android:layout_width="196dp"
        android:layout_height="85dp"
        android:background="@drawable/rounded_white_background"
        android:fontFamily="@font/arimo"
        android:onClick="btnLoadUnity"
        android:text="Drive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/classroomButton"
        android:layout_width="196dp"
        android:layout_height="85dp"
        android:background="@drawable/rounded_white_background"
        android:fontFamily="@font/arimo"
        android:text="Classroom"
        android:onClick="goToClassroomDashboardScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <Button
        android:id="@+id/learnButton"
        android:layout_width="196dp"
        android:layout_height="85dp"
        android:background="@drawable/rounded_white_background"
        android:fontFamily="@font/arimo"
        android:text="Learn"
        android:onClick="goToLearnScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/feedbackButton"
        android:layout_width="196dp"
        android:layout_height="85dp"
        android:background="@drawable/rounded_white_background"
        android:fontFamily="@font/arimo"
        android:onClick="goToFeedbackScreen"
        android:text="Feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/backgroundMainImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/road" />

</androidx.constraintlayout.widget.ConstraintLayout>
